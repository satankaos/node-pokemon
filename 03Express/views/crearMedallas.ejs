    <div class="container">
        <h1>Crear medallas</h1>
        <form action="/medallas" class="my-2" method="POST">
            <input type="text" placeholder="Nombre de la medalla" class="form-control my-2" name="nombre">
            <input type="text" placeholder="Ciudad donde se gano" class="form-control my-2" name="ciudad">
            <input type="text" placeholder="Gimnasio en la que se gano" class="form-control my-2" name="gimnasio">
            <button type="submit" class="btn btn-dark btn-block">
                Agregar
            </button>
        </form>
    </div>
